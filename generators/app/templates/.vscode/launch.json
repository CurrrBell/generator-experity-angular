{
    // Use IntelliSense to find out which attributes exist for C# debugging
    // Use hover for the description of the existing attributes
    // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/bin/Debug/netcoreapp2.1/RulesEngineAdminPortal.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "internalConsoleOptions": "neverOpen",
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "RcmApiBaseAddress": "https://devservices.practicevelocity.com/rcmadminapi/",
                "Secret": "2YyIgnZtqg42PuW0xrepvD09Vm0tt8I2bzFDkZ9Z5iAcRqn7U7w0VOOoMmobIc7",
                "EncryptionPublicKey": "",
                "KeyFilePath": "",
                "PathBase": ""
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        // not sure how useful the ones below are after the change to npm start,
        // keeping them doesn't seem to hurt anything
        {
            "name": ".NET Core Launch (silent)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/bin/Debug/netcoreapp2.1/RulesEngineAdminPortal.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "internalConsoleOptions": "neverOpen",
            "launchBrowser": {
                "enabled": false,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "RcmApiBaseAddress": "https://devservices.practicevelocity.com/rcmadminapi/",
                "Secret": "2YyIgnZtqg42PuW0xrepvD09Vm0tt8I2bzFDkZ9Z5iAcRqn7U7w0VOOoMmobIc7",
                "EncryptionPublicKey": "",
                "KeyFilePath": "",
                "PathBase": ""
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        // IN ORDER FOR THIS TO WORK, YOU NEED debugger-for-Chrome EXTENSION
        //
        // before running this configuration, run npm run test:debug.
        // if that command has changed since 1/22/2018, your karma.conf.js
        // must be non-headless chrome pointing at port 9876 with singleRun
        // set to false. It would look something like this:
        // ...
        //   port: 9876,
        //   browsers: ['Chrome'],
        //   singleRun: false,
        // ...
        // if this breaks, good luck. It is very poorly documented.
        {
            "name": "Debug Karma tests",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:9876/debug.html",
            "sourceMapPathOverrides": {
                "/./*": "${webRoot}/*",
                "/src/*": "${webRoot}/*",
                "/*": "*",
                "/./~/*": "${webRoot}/node_modules/*",
            },
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}/ClientApp/"
        }
    ]
}